<h1>Products</h1>

<table>
  <tr>
    <th>Title</th>
    <th>category</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td>product.title</td>

      <td><%= link_to 'Sell a Product', products_path(product),
              method: :alert,
              data: { confirm: 'You have not selected a category' } %></td>
      <td></td>
    </tr>
    <% end %>
</table>

