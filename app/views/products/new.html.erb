 <%= link_to 'Buy/Sell Products', products_path %>
<%= form_with model: @product, local: true do |form| %>

<% if @product.errors.any? %>
  <div id="error_explanation">
   <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

<p>
  <%= select_tag(:category_id, options_for_select(@products.collect{ |p| [p.category, p.id] }), :prompt => "Select a Category") %>
</p>

 <p>
    <%= form.label :type %><br>
    <%= form.text_area :type %>
  </p>

  <p>
    <%= form.label :price %><br>
    <%= form.text_area :price %>
  </p>

  <p>
    <%= form.label :delivery %><br>
    <%# <form action="/action_page.php" method="get">
      <input type="radio" checked="checked" value="true" name="delivery"> local delivery is available<br>
      <input type="radio" value="false" name="delivery"> local delivery not available<br>
    </form> %>
    <%= radio_button_tag(:category_id, options_for_select(@products.collect{ |p| [p.category, p.id] }), :prompt => "Select a Category") %>
  </p>

  <p>
    <%= form.label :city %><br>
    <%= form.text_area :city %>
  </p>

  <p>
    <%= form.submit 'Sell' %>
  </p>

<% end %>
