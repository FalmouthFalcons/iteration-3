<%= form_with(model: @products, local:true) do |form| %>

  <p>
    <%= form.title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%# Then there should be a dropdown that displays all product categories %>
    <%=  form.category%>
    <%=  form.display %>
  </p>

  <p>
    <%= form.type %>
    <%= form.text_field :type %>
  </p>

  <p>
    <%=  form.price %>
    <%=  form.text_field :price %>
  </p>

  <p>
    <%= form.submit 'Sell' %>
  </p>
<% end %>

