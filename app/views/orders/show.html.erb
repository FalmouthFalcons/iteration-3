<h1>Shopping Cart</h1>
<br>

<table>
<tr>
    <th>Title </th>
    <th>Category </th>
    <th>Price </th>
    <th>Type </th>
    <th>Delivery </th>
    <th>City </th>
    <th>Image </th> 
 
</tr>
 <%total = 0%>
<% @final.each do |product| %>

<div class="row">
  <div class="col-3">
   <tr>
        <td><%= product.title %> </td>  
        <td><%= product.delivery %> </td>
        <td><%= product.price %> </td>  
        <td><%= product.city %> </td> 
        <td><%= product.type %> </td> 
        <td><%= product.delivery %> </td> 
  <td>   <% if product.product_image.present? %>
    <div class="col-9"><%= image_tag product.product_image %> 

<% total += product.price %>
    <% end %> </td>

<% end %>
<%=total%>
   </tr>
     
 </div>

   
    


 

</table>

